{% extends 'base.html.twig' %}

{% block header %}
    {% include '__header.html.twig' %}
{% endblock %}
{% block body %}
    <div class="jumbotron text-center">
        {{ form_start(form) }}
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.title) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.description) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.type) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.salary) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.contract) }}
                </div>
            </div>
        </div>
        <a href="{{ path('lbc__create_add') }}" class="primary-button">Place an Add</a>
    </div>
    {% if adds is defined %}
        <div>
            {% for add in adds.content %}
                {% if add.type == "emploi" %}
                    <div>
                        <div class="add-row__tag">emploi</div>
                    </div>
                {% endif %}
                {% if add.type == "automobile" %}
                    <div>
                        <div class="add-row__tag">automobile</div>
                    </div>
                {% endif %}
                {% if add.type == "immobilier" %}
                    <div>
                        <div class="add-row__tag">immobilier</div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}


